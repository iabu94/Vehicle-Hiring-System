@model TaxiService.Models.ViewAddsModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
}

<style>
    #vehicles:hover { background-color: #f9d700 }
</style>

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    FASTER. SAFER. SMARTER.
                </h1>
                <h5 class="text-white">
                    We take out the hassle and bring back the joy of traveling.
                </h5>
                <p class="text-white link-nav"><a href="@Url.Action("Index","UserHome")">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="@Url.Action("NewBooking","UserHome")"> Services</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->


<div class="container">
    <hr />
    @for (int i = 0; i < Model.VehicleDetails.Count; i++)
    {
        <div class="row">
            <div class="col-sm-2"></div>
            <!--Onclick function-->
            <div class="col-sm-8 col-sm-offset-2 card" style="cursor:pointer" id="vehicles" onclick="window.location = '';">
                <div class="tab-content">
                    <div class="tab-pane active" id="user-timeline">
                        <div class="row" style="margin:10px">
                            <div class="col-sm-4">
                                <div class="card">
                                    <!--Image content-->
                                    <img src="@Url.Content(Model.VehicleImages[i].ImageUrl)" alt="Image" class="img-thumbnail img-responsive" />
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="timeline-post">
                                    <div class="post-media">
                                        <div class="content">
                                            <!--Vehicle Name-->
                                            <h5><a href="#">@Model.VehicleDetails[i].SellingHead</a></h5>
                                            <!--Registered Date-->
                                            <p class="text-muted"><small>@Model.VehicleDetails[i].UploadedDate</small></p>
                                        </div>
                                    </div>
                                    <div class="post-content">
                                        <!--Run Time-->
                                        <p style="color:#009877;font-weight:bold">@string.Format("{0:#,###0}", Model.VehicleDetails[i].MileageKm) Km</p>
                                    </div>
                                    <div class="post-content">
                                        <!--Price-->
                                        <p>Rs.<span> @string.Format("{0:#,###0}", Convert.ToInt32(Model.VehicleDetails[i].Price))</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2"></div>
        </div>
        <hr style="width:500px" />

    }
</div>
