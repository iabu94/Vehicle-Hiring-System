@model TaxiService.Models.RiderDetailsTable
@{
    ViewBag.Title = "RegisterRider";
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
}
<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row col-md-12">
            &nbsp;<br />&nbsp;<br />&nbsp;<br />&nbsp;
        </div>
        <div class="row fullscreen align-items-baseline justify-content-between">
            <div>
            </div>

            @using (Html.BeginForm("RegisterRider", "UserHome", new { area = "" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form id="form">
                    <div class="row">
                        <div class="col-md-auto  header-right">
                            <h4 class="pb-30">Register Online! - Rider</h4>
                            <div class="from-group">
                                @Html.TextBoxFor(x => x.FirstName, new { type = "text", @class = "form-control txt-field", name = "fname", id = "fNameInput", placeholder = "Enter First Name", required = "required" , style = "color:white" })
                                @Html.TextBoxFor(x => x.LastName, new { type = "text", @class = "form-control txt-field", name = "lname", id = "lnameinput", placeholder = "Enter Last Name", required = "required", style = "color:white" })
                                @Html.TextBoxFor(x => x.Email, new { type = "email", @class = "form-control txt-field", name = "email", id = "emailInput", placeholder = "Enter Email", required = "required", style = "color:white" })
                                @Html.TextBoxFor(x => x.Mobile, new { type = "text", @class = "form-control txt-field", name = "mobile", id = "mobileInput", placeholder = "Enter Mobile Number", required = "required" , style = "color:white" })
                                @Html.TextBoxFor(x => x.Password, new { maxlength = "15", minlength = "3", type = "password", name = "password", @class = "form-control txt-field", id = "passwordInput", placeholder = "Password", required = "required", style = "color:white" })
                                @Html.TextBoxFor(x => x.Password, new { type = "password", @class = "form-control txt-field", id = "confirmPassword", name = "cpassword", placeholder = "Confirm Password", required = "required", style = "color:white" })
                                <label class="checkbox-inline form-control txt-field" style="color:white; text-align:start;background-color:black;">
                                    <input type="checkbox" value="true" required>&nbsp;&nbsp; I agree to the terms & conditions
                                </label>
                                <div class="form-group">
                                    <button class="btn btn-success btn-lg btn-block text-center text-uppercase">Register as Rider</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            }
            <div>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->


