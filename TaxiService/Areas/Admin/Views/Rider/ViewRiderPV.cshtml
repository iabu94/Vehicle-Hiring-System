@model TaxiService.Models.RiderDetailsTable

@{ 
    Layout = null;
}

<link href="~/Content/common.css" rel="stylesheet" />

<div class="modal-header site-theme">
    <h4 class="modal-title pull-left">View Rider</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<div class="modal-body site-theme-body">
    <table class="table table-hover table-striped ">
       @if (Model != null)
       {
        <tr>
            <td><b>Rider Code</b></td>
            <td>@Model.RiderCode</td>
        </tr>
        <tr>
            <td><b>First Name</b></td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td><b>Last Name</b></td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td><b>Email</b></td>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <td><b>Mobile</b></td>
            <td>@Model.Mobile</td>
        </tr>
        <tr>
            <td><b>Current Location</b></td>
            <td>@Model.CurrentLocation</td>
        </tr>
        <tr>
            <td><b>Registered Date</b></td>
            <td>@Model.RegisteredDate</td>
        </tr>
        <tr>
            <td><b>Status</b></td>
            <td><label class="label label-warning">Pending</label></td>
        </tr>
       }
       else
       {
           <tr><td><label class="label label-danger">No Data Available</label></td></tr>
       }
    </table>
</div>
<div class="modal-footer site-theme">
</div>
